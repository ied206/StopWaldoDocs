{
    "manifest_version": 2,
    "name": "StopWaldoDocs",
    "version": "1.0",
    "description": "View rather English docs instead of quirky machine translated docs.",
    "icons": {
        "48": "icons/stopwaldodocs-48.svg",
        "96": "icons/stopwaldodocs-48.svg"
    },
    "applications": {
        "gecko": {
            "id": "stopwaldodocs@joveler.kr"
        }
    },
    "browser_action": {
        "browser_style": true,
        "default_title": "StopWaldoDocs",
        "default_popup": "popup/status.html",
        "default_icon": {
            "16": "icons/stopwaldodocs-48.svg",
            "32": "icons/stopwaldodocs-48.svg",
            "48": "icons/stopwaldodocs-48.svg"
        }
    },
    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "const.js",
            "background/redirect_list.js",
            "background/redirect_url.js"
        ]
    }
}